RewriteEngine On

# Ensure HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Custom Rewrites for Clean URLs
RewriteRule ^menu$ HTML/menu.html [L]
RewriteRule ^about$ HTML/about.html [L]
RewriteRule ^contact$ HTML/contact.html [L]
RewriteRule ^tracking$ HTML/tracking.html [L]
RewriteRule ^whatsapp$ HTML/whatsapp_select.html [L]
RewriteRule ^offline$ HTML/offline.html [L]

# Handle Missing HTML Extension (Optional)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]
