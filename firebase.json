{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/menu",
                "destination": "/html/menu.html"
            },
            {
                "source": "/about",
                "destination": "/html/about.html"
            },
            {
                "source": "/contact",
                "destination": "/html/contact.html"
            },
            {
                "source": "/tracking",
                "destination": "/html/tracking.html"
            },
            {
                "source": "/whatsapp",
                "destination": "/html/whatsapp_select.html"
            },
            {
                "source": "/offline",
                "destination": "/html/offline.html"
            }
        ]
    }
}
